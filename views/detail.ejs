<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger fw-bold" role="alert">
        Data contact tidak ada. <br />
        <a href="/contact" class="alert-link fw-normal"
          >Kembali ke daftar contact</a
        >.
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">
            <%= contact.nohp %>
          </h6>
          <p class="card-text"><%= contact.email %></p>

          <!-- Tambahkan form untuk menghapus data -->
          <form
            method="POST"
            action="/contact/delete/<%= contact.nama %>"
            onsubmit="return confirm('Yakin?');"
          >
            <button type="submit" class="btn btn-danger badge">Hapus</button>
          </form>

          <a href="/contact" class="card-link d-block mt-3"
            >&laquo; Kembali ke daftar contact</a
          >
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
